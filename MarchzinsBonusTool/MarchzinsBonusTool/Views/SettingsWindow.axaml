<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MarchzinsBonusTool.ViewModels"
        xmlns:inf="using:MarchzinsBonusTool.Infrastructure"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="650"
        x:Class="MarchzinsBonusTool.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Einstellungen"
        Width="550" Height="650"
        MinWidth="450" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Window.Styles>
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#666"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#6B8FFF"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#218838"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#5A6268"/>
        </Style>
        <Style Selector="Button.link">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B8FFF"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.link:pointerover">
            <Setter Property="Foreground" Value="#5A7FEF"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#6B8FFF">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <TextBlock Text="⚙" 
                               FontSize="24" 
                               Foreground="White"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Einstellungen" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="20"
                        MinWidth="40"
                        Command="{Binding CancelCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#F8F9FA">
            <StackPanel Margin="30,20">
                <!-- Language Section -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"                            
                        BoxShadow="0 2 10 0 #20000000">

                    
                    <StackPanel>
                        <TextBlock Text="Sprache" Classes="section-header" Margin="0,0,0,15"/>
                        
                        <ComboBox ItemsSource="{Binding Languages}"
                                  SelectedItem="{Binding SelectedLanguage}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="inf:Language">
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Currency and Format Section -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"
                        BoxShadow="0 2 10 0 #20000000">

                    
                    <StackPanel>
                        <TextBlock Text="Standard-Währung" Classes="section-header" Margin="0,0,0,15"/>
                        
                        <TextBox Text="{Binding Currency}"
                                 Watermark="CHF"
                                 MaxLength="5"/>
                        
                        <TextBlock Text="Zahlenformat" Classes="section-header"/>
                        
                        <TextBlock Text="Tausendertrennzeichen" Classes="label"/>
                        <TextBox Text="{Binding ThousandsSeparator}"
                                 MaxLength="1"
                                 Watermark="'"/>
                        
                        <TextBlock Text="Dezimaltrennzeichen" Classes="label"/>
                        <TextBox Text="{Binding DecimalSeparator}"
                                 MaxLength="1"
                                 Watermark="."/>
                    </StackPanel>
                </Border>

                <!-- Default Values Section -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 2 10 0 #20000000">

                    
                    <StackPanel>
                        <TextBlock Text="Voreinstellungen" Classes="section-header" Margin="0,0,0,15"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="*,20,*">
                            
                            <!-- Row 1 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Normal %" 
                                       Classes="label"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                       Text="Bonus %" 
                                       Classes="label"
                                       HorizontalAlignment="Center"/>
                            
                            <TextBox Grid.Row="1" Grid.Column="0" 
                                     Text="{Binding DefaultNormalerZinssatz}"
                                     Watermark="1.50"/>
                            <TextBox Grid.Row="1" Grid.Column="2" 
                                     Text="{Binding DefaultBonusZinssatz}"
                                     Watermark="2.50"/>
                            
                            <!-- Row 2 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Grid.ColumnSpan="3"
                                       Text="Steuer %" 
                                       Classes="label"
                                       HorizontalAlignment="Center"/>
                            
                            <TextBox Grid.Row="3" Grid.Column="0" 
                                     Grid.ColumnSpan="3"
                                     Text="{Binding DefaultSteuersatz}"
                                     Watermark="35"
                                     HorizontalAlignment="Center"
                                     Width="200"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <Grid Margin="30,0">
                <Button Content="Zurücksetzen"
                        Classes="link"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Command="{Binding ResetCommand}"/>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Speichern"
                            Classes="primary"
                            Command="{Binding SaveCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="Abbrechen"
                            Classes="secondary"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>